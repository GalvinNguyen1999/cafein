extends ../layouts/common.pug
block content
  h4 Login

  if errors
    each error in errors
      .alert.alert-danger #{error}

  form(action='/auth/login', method='POST').w-50
    .mb-3
      label.form-label(for='inputEmail1') Email address
      input#inputEmail1.form-control(type='email', aria-describedby='emailHelp', name='email', value=values ? values.email : '')
      #emailHelp.form-text We&apos;ll never share your email with anyone else.
    .mb-3
      label.form-label(for='inputPassword1') Password
      input#inputPassword1.form-control(type='password', name='password', value=values ? values.password : '')
    .mb-3.form-check
      input#exampleCheck1.form-check-input(type='checkbox')
      label.form-check-label(for='exampleCheck1') Check me out
    button.btn.btn-primary(type='submit') Submit
