extends ../layouts/common.pug
block content
  h3 Create User:
  if errors
    each error in errors
      .alert.alert-danger #{error}
  form(action="/users/create", method="POST", enctype="multipart/form-data", class="mt-2 w-25 ps-4")
    label(for="name" class="my-2") Name:
    input(type="text", name="name", class="form-control" id="name", value=values ? values.name : '')

    label(for="age" class="my-2") Age:
    input(type="text", name="age", class="form-control" id="age", value=values ? values.age : '')
    
    label(for="phone" class="my-2") Phone:
    input(type="text", name="phone", class="form-control" id="phone", value=values ? values.phone : '')

    label(for="email" class="my-2") Email:
    input(type="text", name="email", class="form-control" id="email", value=values ? values.email : '')

    label(for="password" class="my-2") Password:
    input(type="password", name="password", class="form-control" id="password", value=values ? values.password : '')

    label(for="avatar" class="my-2") Avatar:
    input(type="file", name="avatar", class="form-control" id="avatar", value=values ? values.avatar : '')
    
    button(class="btn btn-primary mt-3") Create 
