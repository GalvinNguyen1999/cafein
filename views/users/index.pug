extends ../layouts/common.pug
block content
  h4 List Users:

  form.d-flex(role='search', action='/users/search', method='GET')
    input.form-control.me-2(name='q', type='search', placeholder='Search', aria-label='Search')
    button.btn.btn-outline-success(type='submit') Search
  table.table
    thead
      tr
        th(scope='col') Name
        th(scope='col') Age
        th(scope='col') Phone
        th(scope='col') Action
    tbody
      each user in users
        tr
          td #{user.name}
          td #{user.age}
          td #{user.phone}
          td
            a(href="/users/" + user.id, class="btn btn-outline-dark") View
